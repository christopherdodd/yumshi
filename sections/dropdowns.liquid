<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-rich-text.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}</noscript>

{% capture 'meta_data' %}
{% for variant in product.variants %}
  {{ variant.id | json }}: {{ variant.metafields.my_fields.energy | json }}
  {% unless forloop.last %},{% endunless %}
{% endfor %}
{% endcapture %}

<div> {{ meta_data }}</div>

<script>
  selectCallback = function(variant, selector) {
  // ... your default selectCallback code here
  var material = metaData[variant.id];
}
</script>

<script>
  var metaData = { {{ meta_data }} }
</script>

  <div class="page-width">
    <details>
      <summary>
        <div class="summary__title">
    		<h2 style="text-align: center;">{{ section.settings.heading }}</h2>
        {% render 'icon-caret' %}
         </div>
       </summary>
       <!-- Nutrition info -->
 <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
    <div style="text-align: center;" class="rich-text__blocks">
      {%- for block in section.blocks -%}
      {% if block.settings.heading != blank %}
         <h3 class="{{ block.settings.heading_size }}" {{ block.shopify_attributes }}>{{ block.settings.heading | escape }}</h3>
		{% endif %}
      <!-- Energy -->
      {% if block.settings.nutrition %}      
      <div class="nutrition-con">
      <div>
      <h4>Energy:</h4>
  {% if variant.metafields.my_field.energy != blank %}<p>{{ variant.metafields.my_fields.energy }}</p>
  {% else %}<p>{{ product.metafields.my_fields.energy }}</p>{% endif %}
      </div>
    <!-- Fat -->
      <div>
      <h4>Fat:</h4>
  {% if variant.metafields.my_field.fat != blank %}<p>{{ variant.metafields.my_fields.fat }}</p>
  {% else %}<p>{{ product.metafields.my_fields.fat }}</p>{% endif %}
      </div>
      <!-- Saturates -->
      <div>
      <h4>Saturates:</h4>
  {% if variant.metafields.my_field.saturates != blank %}<p>{{ variant.metafields.my_fields.saturates }}</p>
  {% else %}<p>{{ product.metafields.my_fields.saturates }}</p>{% endif %}
      </div>
      <!-- Carbs -->
      <div>
      <h4>Carbs:</h4>
  {% if variant.metafields.my_field.carbs != blank %}<p>{{ variant.metafields.my_fields.carbs }}</p>
  {% else %}<p>{{ product.metafields.my_fields.carbs }}</p>{% endif %}
      </div>
      <!-- Sugars -->
      <div>
      <h4>Sugars:</h4>
  {% if variant.metafields.my_field.sugars != blank %}<p>{{ variant.metafields.my_fields.sugars }}</p>
  {% else %}<p>{{ product.metafields.my_fields.sugars }}</p>{% endif %}
      </div>
      <!-- Protein -->
      <div>
      <h4>Protein:</h4>
  {% if variant.metafields.my_field.protein != blank %}<p>{{ variant.metafields.my_fields.protein }}</p>
  {% else %}<p>{{ product.metafields.my_fields.protein }}</p>{% endif %}
      </div>   
      <!-- Salt -->
      <div>
      <h4>Salt:</h4>
  {% if variant.metafields.my_field.salt != blank %}<p>{{ variant.metafields.my_fields.salt }}</p>
  {% else %}<p>{{ product.metafields.my_fields.salt }}</p>{% endif %}
      </div>   
      </div>
      {% endif %}
           
		{% if block.settings.text != blank %}
            <div class="rich-text__text rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
		{% endif %}
		{% if block.settings.button_label != blank %}
            <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
              {{ block.settings.button_label | escape }}
            </a>
		{% endif %}
      {%- endfor -%}
    	</div>
      </div>
    </details>
  </div>


<style>
  .nutrition-con{
   display: flex;
    flex-direction: row;
    justify-content: space-around; 
        flex-wrap: wrap;
  }
  .nutrition {
    display: flex;
    flex-direction: column; 
  }
</style>

{% schema %}
{
  "name": "Block",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.rich-text.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.rich-text.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.rich-text.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.rich-text.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.rich-text.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.rich-text.settings.color_scheme.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.rich-text.settings.full_width.label"
    }
  ],
  "blocks": [
    {
      "type": "Block",
      "name": "Block",
      "limit": 9,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Talk about your brand",
          "label": "t:sections.rich-text.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.rich-text.blocks.heading.settings.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.rich-text.blocks.heading.settings.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.rich-text.blocks.heading.settings.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.rich-text.blocks.heading.settings.heading_size.label"
        },
        {
          "type": "checkbox",
          "id": "nutrition",
          "default": false,
          "label": "Nutrition Checkbox"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
          "label": "t:sections.rich-text.blocks.text.settings.text.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.rich-text.blocks.button.settings.button_label.label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.rich-text.blocks.button.settings.button_link.label"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "t:sections.rich-text.blocks.button.settings.button_style_secondary.label"
        }
      ]
    }
  ]
}
{% endschema %}

